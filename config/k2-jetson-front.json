{
  "version": 2,
  "robot": {
    "modules":
    {
      "transmitter": {
          "driver": "subt.push:Push",
          "init": {
            "bind": true,
            "endpoint": "tcp://*:5557"
          }
      },
      "from_apu_receiver":{
        "driver": "subt.pull:Pull",
        "init": {
          "bind": true,
          "endpoint": "tcp://*:5558",
          "outputs": ["joint_angle_pose", "pose3d"]
        }
      },
      "from_jetson_rear_receiver":{
        "driver": "subt.pull:Pull",
        "init": {
          "bind": true,
          "endpoint": "tcp://*:5560",
          "outputs": ["depth"]
        }
      },
      "lidar": {
          "driver": "lidar",
          "in": ["raw"],
          "out": ["raw", "scan"],
          "init": {"sleep": 0.1, "mask": [45, -45], "blind_zone": 100}
      },
      "lidar_tcp": {
          "driver": "tcp",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"host": "192.168.0.1", "port": 2111, "timeout": 0.5}
      },
      "realsense": {
        "driver": "realsense_multicam",
        "init": {
          "devices": [{"type": "D400", "serial_number": "939622072545", "name": "front"},
                      {"type": "T200", "serial_number": "929122111204", "name": "tracking"}
          ],
          "depth_subsample": 3,
          "depth_resolution": [
            640,
            360
          ],
          "depth_fps": 30,
          "pose_subsample": 20
        }
      },
      "depth2scan": {
          "driver": "app.depth2scan_kloubak:DepthToScan",
          "init": {}
      }
      },
    "links": [
      ["lidar_tcp.raw", "lidar.raw"],
      ["lidar.raw", "lidar_tcp.raw"],

      ["realsense.tracking_pose3d", "transmitter.pose3d"],
      ["realsense.depth", "depth2scan.depth"],
      ["lidar.scan", "depth2scan.scan"]
    ]
  }
}
